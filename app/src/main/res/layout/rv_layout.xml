<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_orderForm"
        android:text="Daftar Transaksi"
        android:textSize="30dp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_namaProdukTrans"
        android:text="Nama Produk : "
        android:textSize="20dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/et_namaProdukTrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/app_name"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_jumlahProdukTrans"
        android:text="Jumlah Produk : "
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/et_jumlahProdukTrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/app_name"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_AlamatTrans"
        android:text="Alamat : "
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/et_AlamatTrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/app_name"
        />

</LinearLayout>